
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/champion_name"
        android:gravity="center"
        android:layout_weight="1"
        android:text="name"
        android:layout_width="0dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/champion_tile"
        android:gravity="center"
        android:layout_weight="1"
        android:text="title"
        android:layout_width="0dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/champion_blurb"
        android:gravity="center"
        android:layout_weight="1"
        android:text="blurb"
        android:layout_width="0dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/champion_info"
        android:gravity="center"
        android:layout_weight="1"
        android:text="info"
        android:layout_width="0dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/champion_tag"
        android:gravity="center"
        android:layout_weight="1"
        android:text="tag"
        android:layout_width="0dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/champion_partype"
        android:gravity="center"
        android:layout_weight="2"
        android:text="partype"
        android:layout_width="0dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/champion_stats"
        android:gravity="center"
        android:layout_weight="1"
        android:text="stats"
        android:layout_width="0dp"
        android:layout_height="50dp" />

</LinearLayout>
