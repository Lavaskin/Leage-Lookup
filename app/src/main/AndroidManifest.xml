<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CS492Final">
        <activity android:name="lavaskin.app.ll.ChampDetailActivity"
            android:parentActivityName="lavaskin.app.ll.ChampionListActivity"/>
        <activity
            android:name="lavaskin.app.ll.ChampionListActivity"
            android:parentActivityName="lavaskin.app.ll.MainActivity"
            android:launchMode="singleTop"/>
        <activity
            android:name="lavaskin.app.ll.SettingsActivity"
            android:parentActivityName="lavaskin.app.ll.MainActivity" />
        <activity
            android:name="lavaskin.app.ll.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>